{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": [
      "es7",
      "dom"
    ],
    "sourceMap": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true
  },
  "include": [
    "./.gulp/**/*",
    "./typings/**/*",
    "./src/**/*",
    "./test/**/*",
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
